---
import { useTranslations } from "src/i18n/utils";

const page = { ...Astro.params, ...Astro.props };
const t = await useTranslations(page.lang ? page.lang : 'en');

function title() {
    if(page.entry) {
        return `${t(`page.entry`)} | ${t(`global.wiki`)} | ${t(`page.index.page_title`)}`
    }
    else if(page.tag) {
        return `${t(`global.tags`)}: ${page.tag.name} | ${t(`page.index.page_title`)}`
    }
    else if(page.title.title.includes('titles.')) {
        return `${t(page.title.title)} | ${t('index.page_title')}`
    }
    else if(page.title) {
        return `${page.title.title} | ${t('index.page_title')}`
    } else {
        return `${t(`index.page_title`)}`
    }
}
---
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>
        {title()}
    </title>
    
