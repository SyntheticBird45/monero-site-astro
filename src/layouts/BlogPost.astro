            <!-- {% capture tags_content_temp %}{{ tags_content }}<a href="/blog/tags/{{ tag.slug }}.html">{{ tag.name }}</a>{% if forloop.last == false %}, {% endif %}{% endcapture %} -->
            <!-- {% assign tags_content = tags_content_temp %} -->
        <!-- {% endif %} -->
    <!-- {% endfor %} -->
<!-- {% else %} -->
